
@model IEnumerable<BookModel>
@{
    ViewData["Title"] = "GetAllBooks";
}

<div class="container">
    <h3 class="display-0">AllBooks</h3>
    <div class="row py-3">
        @foreach(var eachBook in Model)
        {
            <div class=" col-md-4">
                    <div class=" card mb-4 shadow-sm">
                    <svg class="bd-placeholder-img card-img-top" width="100%" height="180" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: Image cap" preserveAspectRatio="xMidYMid slice" focusable="false"><title>Placeholder</title><rect width="100%" height="100%" fill="#868e96"></rect><text x="50%" y="50%" fill="#dee2e6" dy=".3em">Image cap</text></svg>
                    <div class=" card-body">
                            <p class="card-title">@eachBook.Title</p>
                        <p class="card-text">@eachBook.Description</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a class="btn btn-sm btn-outline-info" asp-controller="book" asp-action="GetBook" asp-route-id ="@eachBook.Id">View Details</a>
                                </div>
                                <small class=" authorName text-muted">@eachBook.Author</small>
                            </div>
                        </div>
                    </div>
                </div>
        }

    </div>
</div>

